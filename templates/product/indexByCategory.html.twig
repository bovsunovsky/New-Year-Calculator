{% extends 'base.html.twig' %}

{% block styles %}
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">
{% endblock %}

{% block body %}

    <h2> Товары категории :  {{ productListByCategory.0.category.name }}</h2>
    <a class="btn btn-primary" href="{{ path('app_product') }}">Вернуться ко всем</a>
    <a class="btn btn-primary" href="{{ path('app_product_new') }}">Добавить новый</a>

    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Фото</th>
            <th>Название</th>
            <th>Цена, грн</th>
            <th>Вес, гр.</th>
            <th>Наличие</th>
            <th>Категория</th>
            <th>Производитель</th>
        </tr>
        </thead>
        <tbody>
        {% for product in productListByCategory %}
            <tr>
                <td>{{ product.id }}</td>
                <td><img src="/uploads/images/{{ product.image }}" style="width: 50px" ></td>
                <td>{{ product.title }}</td>
                <td>{{ product.price/100 }}</td>
                <td>{{ product.weight }}</td>
                <td>{{ product.status }}</td>
                <td>{{ product.category.name }}</td>
                <td>{{ product.manufacturer }}</td>
                <td>
                    <a href="{{ path('app_product_update', {'id': product.id}) }}"><img src="/img/edit.png"></a>
                    <a href="{{path('product_delete', {'id': product.id})}}"><img src="/img/delete.png"></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}